- if field.text_formatting
  = f.input field.name.to_sym,
    label:      label_for_custom_field(f.object, field),
    hint:       field.hint,
    as:         :rte,
    input_html: { class: field.text_formatting }
- else
  = f.input field.name.to_sym,
    label:      label_for_custom_field(f.object, field),
    hint:       field.hint,
    as:         :text,
    input_html: { class: field.text_formatting }
