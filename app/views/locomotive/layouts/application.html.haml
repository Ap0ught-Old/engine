!!! XML
!!!
%html{ xmlns: 'http://www.w3.org/1999/xhtml'  }
  %head
    = render 'locomotive/shared/head'
  %body{ class: sections }
    = render 'locomotive/shared/header'
    .wrapper
      %section.main{ role: 'main' }
        %nav.sidebar
          = render 'locomotive/shared/sidebar'
        .submenu
          %ul
            = yield :submenu

          - if content_for? :actions
            .actions
              = yield :actions
        .content
          .inner
            %h2!= title

            #local-actions-bar
              &nbsp;
              = yield :buttons

            = yield

      / %footer
      /   = render 'locomotive/shared/footer'

      = yield :foot
