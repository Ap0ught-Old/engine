- if @content_assets.empty?
  %br

  .alert.alert-warning
    != t('.no_items')

- else
  - # Display the assets
  .content-assets-list
    - @content_assets.each do |asset|
      - presenter = asset.to_presenter
      .asset
        .small-thumbnail
          - if presenter.with_thumbnail
            = image_tag presenter.alternative_vignette_url
          - else
            .not-a-image{ class: presenter.content_type }
              %span= presenter.content_type_text

        %h2= presenter.filename

        .actions
          = link_to 'Select', '#', class: 'btn btn-primary btn-sm'

          &nbsp;

          = link_to content_asset_path(asset), class: 'remove', data: { confirm: t('locomotive.messages.confirm') }, title: t('locomotive.buttons.delete') do
            %i.fa.fa-trash-o

  .text-center
    = paginate @content_assets, theme: 'twitter-bootstrap-3', pagination_class: 'pagination-sm'