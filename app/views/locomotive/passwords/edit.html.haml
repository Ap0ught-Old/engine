- title current_site ? current_site.name : t('locomotive.not_logged_in.title')

= locomotive_form_for(resource, as: resource_name, url: locomotive_account_password_path, html: { method: :put }) do |f|

  = f.hidden_field :reset_password_token

  = f.inputs do
    = f.input :password, label: t('.password'), required: false
    = f.input :password_confirmation, label: t('.password_confirmation'), required: false

  = f.actions do
    = f.button :submit, t('locomotive.buttons.change_password'), class: 'btn'

    %br

    %p= link_to preserve(t('.link')), new_locomotive_account_session_path


